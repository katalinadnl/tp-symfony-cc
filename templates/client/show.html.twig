{% extends 'base.html.twig' %}

{% block title %}Détails du Client{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold text-teal-500 mb-6">Détails du Client</h1>

    <div class="bg-white p-6 rounded-lg shadow-md">
        <table class="min-w-full table-auto border-collapse border border-gray-300 shadow-sm">
            <tbody>
            <tr class="bg-gray-100">
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">ID</th>
                <td class="px-4 py-2 border border-gray-300">{{ client.id }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Nom</th>
                <td class="px-4 py-2 border border-gray-300">{{ client.name }}</td>
            </tr>
            <tr class="bg-gray-100">
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Email</th>
                <td class="px-4 py-2 border border-gray-300">{{ client.email }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Téléphone</th>
                <td class="px-4 py-2 border border-gray-300">{{ client.phone }}</td>
            </tr>
            <tr class="bg-gray-100">
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Créé le</th>
                <td class="px-4 py-2 border border-gray-300">
                    {{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex space-x-4">
        <a href="{{ path('app_client_index') }}"
           class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400 transition">
            Retour à la liste
        </a>

        <a href="{{ path('app_client_edit', {'id': client.id}) }}"
           class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 transition">
            Modifier
        </a>

        {{ include('client/_delete_form.html.twig') }}
    </div>
{% endblock %}
