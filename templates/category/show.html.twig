{% extends 'base.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold text-teal-500 mb-6">Détails de la Catégorie</h1>

    <div class="bg-white p-6 rounded-lg shadow-md">
        <table class="min-w-full table-auto border-collapse border border-gray-300 shadow-sm">
            <tbody>
            <tr class="bg-gray-100">
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">ID</th>
                <td class="px-4 py-2 border border-gray-300">{{ category.id }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Nom</th>
                <td class="px-4 py-2 border border-gray-300">{{ category.name }}</td>
            </tr>
            <tr class="bg-gray-100">
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Description</th>
                <td class="px-4 py-2 border border-gray-300">{{ category.description }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex space-x-4">
        <a href="{{ path('app_category_index') }}"
           class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400 transition">
            Retour à la liste
        </a>

        <a href="{{ path('app_category_edit', {'id': category.id}) }}"
           class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 transition">
            Modifier
        </a>

        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
