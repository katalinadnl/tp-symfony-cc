{% extends 'base.html.twig' %}

{% block title %}Détails du Projet{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold text-teal-500 mb-6">Détails du Projet</h1>

    <div class="bg-white p-6 rounded-lg shadow-md">
        <table class="min-w-full table-auto border-collapse border border-gray-300 shadow-sm">
            <tbody>
            <tr class="bg-gray-100">
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">ID</th>
                <td class="px-4 py-2 border border-gray-300">{{ project.id }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Nom</th>
                <td class="px-4 py-2 border border-gray-300">{{ project.name }}</td>
            </tr>
            <tr class="bg-gray-100">
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Description</th>
                <td class="px-4 py-2 border border-gray-300">{{ project.description }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Date de début</th>
                <td class="px-4 py-2 border border-gray-300">
                    {{ project.startDate ? project.startDate|date('Y-m-d H:i:s') : '' }}
                </td>
            </tr>
            <tr class="bg-gray-100">
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Date de fin</th>
                <td class="px-4 py-2 border border-gray-300">
                    {{ project.endDate ? project.endDate|date('Y-m-d H:i:s') : '' }}
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex space-x-4">
        <a href="{{ path('app_project_index') }}"
           class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400 transition">
            Retour à la liste
        </a>

        <a href="{{ path('app_project_edit', {'id': project.id}) }}"
           class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 transition">
            Modifier
        </a>

        {{ include('project/_delete_form.html.twig') }}
    </div>
{% endblock %}
