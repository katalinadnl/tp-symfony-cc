{% extends 'base.html.twig' %}

{% block title %}Deliverable index{% endblock %}

{% block body %}
    <h1>Deliverable index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Due_time</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for deliverable in deliverables %}
            <tr>
                <td>{{ deliverable.id }}</td>
                <td>{{ deliverable.name }}</td>
                <td>{{ deliverable.dueTime ? deliverable.dueTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_deliverable_show', {'id': deliverable.id}) }}">show</a>
                    <a href="{{ path('app_deliverable_edit', {'id': deliverable.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_deliverable_new') }}">Create new</a>
{% endblock %}
