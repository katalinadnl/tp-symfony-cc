{% extends 'base.html.twig' %}

{% block title %}Liste des Tâches{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold text-teal-500 mb-6">Liste des Tâches</h1>

    <div class="mb-4 text-right">
        <a href="{{ path('app_task_new') }}"
           class="bg-teal-500 text-white px-4 py-2 rounded hover:bg-teal-600 transition">
            Créer une nouvelle tâche
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full table-auto border-collapse border border-gray-300 shadow-md">
            <thead class="bg-teal-500 text-white">
            <tr>
                <th class="px-4 py-2 border border-gray-300 text-left">ID</th>
                <th class="px-4 py-2 border border-gray-300 text-left">Nom</th>
                <th class="px-4 py-2 border border-gray-300 text-left">Description</th>
                <th class="px-4 py-2 border border-gray-300 text-left">Date limite</th>
                <th class="px-4 py-2 border border-gray-300 text-left">Statut</th>
                <th class="px-4 py-2 border border-gray-300 text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr class="hover:bg-gray-100">
                    <td class="px-4 py-2 border border-gray-300">{{ task.id }}</td>
                    <td class="px-4 py-2 border border-gray-300">{{ task.name }}</td>
                    <td class="px-4 py-2 border border-gray-300">{{ task.description }}</td>
                    <td class="px-4 py-2 border border-gray-300">
                        {{ task.dueDate ? task.dueDate|date('Y-m-d H:i:s') : '' }}
                    </td>
                    <td class="px-4 py-2 border border-gray-300">{{ task.status }}</td>
                    <td class="px-4 py-2 border border-gray-300 text-center">
                        <a href="{{ path('app_task_show', {'id': task.id}) }}"
                           class="text-blue-500 hover:text-blue-700 mr-2">
                            Voir
                        </a>
                        <a href="{{ path('app_task_edit', {'id': task.id}) }}"
                           class="text-yellow-500 hover:text-yellow-700">
                            Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="px-4 py-2 text-center text-gray-500">
                        Aucun enregistrement trouvé.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
