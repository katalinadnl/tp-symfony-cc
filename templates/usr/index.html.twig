{% extends 'base.html.twig' %}

{% block title %}Profil Utilisateur{% endblock %}

{% block body %}
    <h1>Bienvenue sur votre profil, {{ app.user.name }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Password</th>
                <th>Roles</th>
                <th>ResetToken</th>
                <th>ResetTokenExpiresAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.resetToken }}</td>
                <td>{{ user.resetTokenExpiresAt ? user.resetTokenExpiresAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_usr_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_usr_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_usr_new') }}">Create new</a>
{% endblock %}
