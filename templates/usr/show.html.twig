{% extends 'base.html.twig' %}

{% block title %}Détails de l'Utilisateur{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold text-teal-500 mb-6">Détails de l'Utilisateur</h1>

    <div class="bg-white p-6 rounded-lg shadow-md">
        <table class="min-w-full table-auto border-collapse border border-gray-300 shadow-sm">
            <tbody>
            <tr class="bg-gray-100">
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">ID</th>
                <td class="px-4 py-2 border border-gray-300">{{ user.id }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Nom</th>
                <td class="px-4 py-2 border border-gray-300">{{ user.name }}</td>
            </tr>
            <tr class="bg-gray-100">
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Prénom</th>
                <td class="px-4 py-2 border border-gray-300">{{ user.surname }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Email</th>
                <td class="px-4 py-2 border border-gray-300">{{ user.email }}</td>
            </tr>
            <tr class="bg-gray-100">
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Mot de passe</th>
                <td class="px-4 py-2 border border-gray-300">{{ user.password }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Rôles</th>
                <td class="px-4 py-2 border border-gray-300">
                    {{ user.roles ? user.roles|json_encode : '' }}
                </td>
            </tr>
            <tr class="bg-gray-100">
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Reset Token</th>
                <td class="px-4 py-2 border border-gray-300">{{ user.resetToken }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 border border-gray-300 text-left text-gray-600 font-medium">Reset Token Expires At</th>
                <td class="px-4 py-2 border border-gray-300">
                    {{ user.resetTokenExpiresAt ? user.resetTokenExpiresAt|date('Y-m-d H:i:s') : '' }}
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex space-x-4">
        <a href="{{ path('app_usr_index') }}"
           class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400 transition">
            Retour à la liste
        </a>

        <a href="{{ path('app_usr_edit', {'id': user.id}) }}"
           class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 transition">
            Modifier
        </a>

        {{ include('usr/_delete_form.html.twig') }}
    </div>
{% endblock %}
