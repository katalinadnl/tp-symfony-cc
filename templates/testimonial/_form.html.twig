{{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}
<div class="grid grid-cols-1 gap-6">
    {% for child in form %}
        {% if child.vars.name == '_token' %}
            {{ form_widget(child) }}
        {% else %}
            <div class="flex flex-col space-y-1">
                {{ form_label(child, null, { 'label_attr': { 'class': 'font-semibold' } }) }}
                {{ form_widget(child, { 'attr': { 'class': 'border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-teal-500' } }) }}
                {{ form_errors(child) }}
            </div>
        {% endif %}
    {% endfor %}
</div>
<button type="submit" class="bg-teal-500 text-white px-6 py-2 rounded hover:bg-teal-600 transition">
    {{ button_label|default('Enregistrer') }}
</button>
{{ form_end(form) }}
