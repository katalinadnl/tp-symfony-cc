{% extends 'base.html.twig' %}

{% block title %}Testimonial index{% endblock %}

{% block body %}
    <h1>Testimonial index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Body</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for testimonial in testimonials %}
            <tr>
                <td>{{ testimonial.id }}</td>
                <td>{{ testimonial.body }}</td>
                <td>{{ testimonial.date ? testimonial.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_testimonial_show', {'id': testimonial.id}) }}">show</a>
                    <a href="{{ path('app_testimonial_edit', {'id': testimonial.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_testimonial_new') }}">Create new</a>
{% endblock %}
